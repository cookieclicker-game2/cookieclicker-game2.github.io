});                } else if (navigator.clipboard) {                    navigator.clipboard.writeText(window.location.href).then(function () {                        showToast('Link copied to clipboard');                    }).catch(function () {                        showToast('Unable to copy link');                    });                }            }            function toggleTheaterMode() {                var body = document.body;                body.classList.toggle('theater-mode');                showToast(body.classList.contains('theater-mode') ? 'Theater mode on' : 'Theater mode off');            }            function toggleFullscreen() {                var frame = document.getElementById('game-frame');                if (!frame) return;                if (document.fullscreenElement) {                    document.exitFullscreen();                } else if (frame.requestFullscreen) {                    frame.requestFullscreen();                }            }        </script>    </main></body></html>